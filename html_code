def generate_html_file():
    html_code = '''
    <!DOCTYPE html>
    <html>
    <head>
        <title>Simple HTML Page</title>
    </head>
    <body>
        <h1>Hello, World!</h1>
        <p>This is a simple HTML page generated by Python.</p>
    </body>
    </html>
    '''

    with open('simple_html.html', 'w') as file:
        file.write(html_code)

if __name__ == '__main__':
    generate_html_file()
